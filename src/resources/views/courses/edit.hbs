<form method="POST" action="/courses/{{course._id}}?_method=PUT">
  <div class="mb-3">
    <label for="name" class="form-label">Tên khóa học</label>
    <input type="text" value="{{course.name}}" name="name" class="form-control" id="name">
  </div>
  <div class="mb-3">
    <label for="description" class="form-label">Mô tả</label>
    <input type="text" value="{{course.description}}" name="description" class="form-control" id="description">
  </div>
  <div class="mb-3">
    <label for="image" class="form-label">Link ảnh</label>
    <input type="text" value="{{course.image}}" name="image" class="form-control" id="image">
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>
